<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message) do |f| %>
  <div class="form-group">
    <label for="message_name">名前：</label>
    <!-- #2行から1行にした -->
    <%= f.text_area :name, rows: "1", class: "form-control", placeholder: "お名前を入力" %>
  </div>
  <div class="form-group">
    <label for="message_body">内容：</label>
    <%= f.text_area :body, rows: "1", class: "form-control", placeholder: "メッセージ内容を入力" %>
  </div>
  <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>